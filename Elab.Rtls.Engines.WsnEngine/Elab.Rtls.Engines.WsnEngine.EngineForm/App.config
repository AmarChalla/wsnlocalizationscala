<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <controller>
    <SocketServer>
      <Use>WSN</Use>
      <Port>3800</Port>
    </SocketServer>
    <SocketServer>
      <Use>GUI</Use>
      <Port>1900</Port>
    </SocketServer>
    <SocketClient>
      <Use>TelosB</Use>
      <Port>3801</Port>
      <HostName>192.168.1.101</HostName>
    </SocketClient>
    <SocketClient>
      <Use>SunSpot</Use>
      <Port>1802</Port>
      <HostName>localhost</HostName>
    </SocketClient>
    <ConnectionString>
      <ID>MySQL</ID>
      <ConnString>DRIVER={MySQL ODBC 3.51 Driver};SERVER=localhost;DATABASE=senseless;UID=root;PASSWORD=admin;OPTION=3;</ConnString>
    </ConnectionString>
  </controller>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="MexGet">
          <serviceMetadata httpGetEnabled="True"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <wsHttpBinding>
        <binding name="nosecure" closeTimeout="00:01:00" openTimeout="00:01:00"
          receiveTimeout="00:10:00" sendTimeout="00:01:00" maxBufferPoolSize="5000000" maxReceivedMessageSize="5000000" messageEncoding="Mtom">
          <readerQuotas maxArrayLength="5000000"  />
          <security mode="None" />
          <reliableSession enabled="true"/>
        </binding>
      </wsHttpBinding>
      <wsDualHttpBinding>
        <binding name="nosecure" closeTimeout="00:01:00" openTimeout="00:01:00" receiveTimeout="00:10:00" sendTimeout="00:01:00" maxBufferPoolSize="5000000" maxReceivedMessageSize="5000000" messageEncoding="Mtom">
          <readerQuotas maxArrayLength="5000000"  />
          <security mode="None" />
        </binding>
      </wsDualHttpBinding>
      <mexHttpBinding>
        <binding name="nosecure" />
      </mexHttpBinding>
    </bindings>
    <services>
      <service behaviorConfiguration="MexGet" name="Elab.Rtls.Engines.WsnEngine.WsnEngineService">
        <endpoint address="QueryService" binding="wsHttpBinding" bindingConfiguration="nosecure"
           name="WsnEngineQueryServiceEndpoint" contract="Scala.Core.IQueryService" />
        <endpoint address="MapService" binding="wsHttpBinding" bindingConfiguration="nosecure"
           name="WsnEngineMapServiceEndpoint" contract="Scala.Core.IMapService" />
        <endpoint address="TagInformationService" binding="wsHttpBinding" bindingConfiguration="nosecure"
            name="WsnEngineTagInformationServiceEndpoint" contract="Scala.Core.ITagInformationService" />
        <endpoint address="EventService" binding="wsDualHttpBinding" bindingConfiguration="nosecure"
           name="WsnEngineEventServiceEndpoint" contract="Scala.Core.IEventService" />
        <endpoint address="MEX" binding="mexHttpBinding" bindingConfiguration="nosecure"
           name="MetadataEndpoint" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:7070/WsnEngine/" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>